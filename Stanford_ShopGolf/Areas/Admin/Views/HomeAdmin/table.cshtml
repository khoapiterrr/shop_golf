
@{
    ViewBag.Title = "table";
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <div class="tile-body">
                <div class="table-responsive">
                    <table class="table table-hover table-bordered" id="sampleTable">
                        <thead class="text-md-center">
                            <tr>
                                <th>
                                    STT
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Code)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.BuyerName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Mobile)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Address)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MaDV)
                                </th>
                                <th class="text-md-center"> Xử lý</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int countBuyer = 0;
                            }
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-md-center">@(++countBuyer)</td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Code)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BuyerName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Mobile)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Address)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MaDV)
                                    <td class="text-md-center">
                                        <a href="#"><i class="fa fa-pencil-square-o"></i></a>&nbsp;&nbsp;|&nbsp;
                                        <a href="#"><i class="fa fa-trash-o"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Data table plugin-->
<script type="text/javascript">$('#sampleTable').DataTable();</script>