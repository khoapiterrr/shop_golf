<div class="navbar navbar-expand-lg navbar-inverse navbar-top nav-dark">
    <div class="container">
        <div class="navbar-header">
            <div class="is-hidden-desktop">
                @Html.Partial("PromtMessage")
            </div>
        </div>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            @Html.Action("TopNav")
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>
<div class="header">
    <div class="container">
        <div class="header-content">
            <div class="toggle-nav-container">
                <button class="btn btn-outline-success is-hidden-desktop" type="button" data-toggle="collapse" data-target="#navbarMobile" aria-controls="navbarMobile" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fa fa-bars"></i>
                </button>
            </div>
            <div class="logo">
                <a href="/home" title="Smart Golf">
                    <img height="110" src="~/Media/Images/SmartGolf_Logo.PNG" class="primary-logo" />
                </a>
            </div>
            <div class="header-search search-box">
                <form role="search" action="/search" method="get" name="simpleSearch" novalidate="novalidate" class="header-search-form">
                    <label class="visually-hidden" for="q">Tìm kiếm sản phẩm</label>
                    <input type="text" id="q" name="q" value="" placeholder="Bạn cần tìm gì?" autocomplete="off" aria-invalid="false">
                    <button type="submit">
                        <span class="visually-hidden">Search</span>
                        <i class="fa fa-search"></i>
                    </button>
                </form>
            </div>
            <div class="widget-header-block is-hidden-mobile">
                <div class="header-promotion-message">
                    @Html.Partial("PromtMessage")
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Action("MainMenu", "Menu")