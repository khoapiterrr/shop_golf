@using Stanford_ShopGolf.ViewModels
@using Stanford_ShopGolf.Extensitions
@model Stanford.ShopGolf.Business.Entity.SanPham


@if (Model.SanPham_Color != null && Model.SanPham_Color.Count > 0)
{
    <div class="subsection-container">
        <div class="attribute">
            <span class="label">Màu sắc</span>
            <div class="subsection-content">
                <ul class="swatches by-size" id="ul_color">
                    @foreach (var mau in Model.SanPham_Color)
                    {
                        <li id="@mau.ColorId" class="selectable "><a class="swatche-item round-click" href="javascript:void(0)" title="@mau.Color.ColorName" style="background-color: @mau.Color.ColorCode;"></a></li>
                    }
                </ul>
            </div>
        </div>
    </div>

}

