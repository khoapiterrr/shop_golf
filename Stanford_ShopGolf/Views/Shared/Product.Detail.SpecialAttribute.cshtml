@if (!string.IsNullOrEmpty(Model.GenderName))
{
    <div>
        @{
            List<int>
                lstGender = Model.GenderName.Split(';').Select(p => int.Parse(p)).ToList();
        }
    </div>

    <div class="subsection-container">
        <div class="attribute">
            <span class="label">Giới tính</span>
            <div class="subsection-content" style="        width: 100%">
                <select class="form-control" id="ddlGender">
                    @foreach (var gender in lstGender)
                    {
                        
                        <option value="@gender">@Stanford.ShopGolf.Business.DataProvider.Entities.Genders.Find(gender).GenderName</option>
                    }
                </select>
            </div>
        </div>
    </div>
}


